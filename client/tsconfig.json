/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@auth/*": ["app/auth/*"],
      "@core/*": ["app/core/*"],
      "@shared/*": ["app/shared/*"],
      "@game/*": ["app/modules/game/*"],
      "@lobby/*": ["app/modules/lobby/*"],
      "@lobby-list/*": ["app/modules/lobby-list/*"],
      "@chat/*": ["app/modules/chat/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
